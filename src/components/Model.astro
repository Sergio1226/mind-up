---
const modelos = [
  {
    tipo: "Modelo Biopsicosocial",
    estrategias: [
      {
        titulo: "Factores Biológicos",
        contenido:
          "Alteraciones neurobiológicas, genética y neuroquímica cerebral",
      },
      {
        titulo: "Factores Psicológicos",
        contenido: "Impacto en cognición, emociones y comportamiento",
      },
      {
        titulo: "Factores Sociales",
        contenido: "Estigma, barreras de acceso y apoyo comunitario",
      },
      {
        titulo: "Interacción multidimensional",
        contenido:
          "La discapacidad resulta de la combinación de estos factores",
      },
    ],
    color: "purple",
  },
  {
    tipo: "Estrategias de Intervención",
    estrategias: [
      {
        titulo: "Tratamiento farmacológico",
        contenido: "Antipsicóticos para control de síntomas",
      },
      {
        titulo: "Psicoterapia",
        contenido: "Terapia cognitivo-conductual y terapia familiar",
      },
      {
        titulo: "Rehabilitación psicosocial",
        contenido: "Entrenamiento en habilidades sociales y laborales",
      },
      {
        titulo: "Apoyo comunitario",
        contenido: "Programas de inclusión y redes de soporte social",
      },
    ],
    color: "blue",
  },
];
---

<section id="modelo" class="py-20 px-6 bg-gradient-to-b from-blue-50 to-white">
  <div class="container mx-auto max-w-6xl">
    <h2
      class="text-4xl md:text-5xl font-bold text-center mb-4 bg-gradient-to-r from-purple-600 to-blue-600 bg-clip-text text-transparent"
    >
      Comprensión e Intervención
    </h2>
    <p class="text-center text-gray-600 mb-7 text-lg">
      Modelo integral y estrategias terapéuticas basadas en evidencia
    </p>
    <div class="grid md:grid-cols-2 gap-8">
      {
        modelos.map((modelo) => (
          <div class="bg-white rounded-3xl p-8 shadow-xl">
            <div
              class={`bg-gradient-to-r from-${modelo.color}-500 to-${modelo.color}-600 inline-block px-6 py-2 rounded-full mb-6`}
            >
              <h3 class="text-xl font-bold text-white">{modelo.tipo}</h3>
            </div>
            <ul class="space-y-4">
              {modelo.estrategias.map((estrategia) => (
                <li class="group">
                  <details class="border border-gray-200 rounded-xl p-4 transition-all group-hover:shadow-lg shadow-cyan-500/50">
                    <summary class="flex items-center gap-3 cursor-pointer list-none">
                      <div class={`bg-${modelo.color}-100 p-2 rounded-lg group-hover:scale-110 transition-transform flex items-center justify-center`}>
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="20"
                          height="20"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          class={`text-${modelo.color}-600`}
                        >
                          <polyline points="9 18 15 12 9 6" />
                        </svg>
                      </div>
                      <span class="text-gray-800 font-semibold text-lg">
                        {estrategia.titulo}
                      </span>
                    </summary>

                    <p class="mt-3 text-gray-600 leading-relaxed px-1">
                      {estrategia.contenido}
                    </p>
                  </details>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </div>
</section>
